<html>
<head>
    <title>To Do List</title>
</head>
<body>
    <h1>{{ category.getName }}</h1>

    {% if tasks is not empty %}
        <p>Here are the tasks:</p>
        <ul>
            {% for task in tasks_all %}
                <li>{{ task.getDescription }} - {{task.getDueDate}}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h3>Add a task</h3>

    <form action="/add_task" method="post">
        
    </form>

    <p><a href='/'>Home</a></p>
</body>
</html>
