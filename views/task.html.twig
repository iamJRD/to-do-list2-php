<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{{ task.getDescription }}</title>
    </head>
    <body>
        <h1> {{ task.getDescription }}</h1>
        <h4> {{ task.getDueDate }}</h4>
        {% if categories is not empty %}
        <h5>Here are your categories:</h5>
            <ul>
                {% for category in categories %}
                    <li>{{ category.getName }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action="/task_add_category" method="post">
            <input id="task_id" = name="task_id" type="hidden" value="{{ task.getId }}">
                <label for="category_id">Select a category:</label>
                <select name="category_id" type="text">
                        {% for category in all_categories %}
                            <option value="{{ category.getId }}">{{ category.getName }}</option>
                        {% endfor %}
                </select>
            <button type="submit">Add Category</button>
        </form>
        <p><a href="/">Home</a></p>

    </body>
</html>
