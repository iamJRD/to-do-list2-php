<html>
    <head>
        <title>To Do List</title>
    </head>
    <body>
        <h1>Categories</h1>

        {% if categories is not empty %}
            <p>Here are all your categories:</p>
            <ul>
                {% for category in categories %}
                    <li><a href="/category/{{ category.getId }}">{{ category.getName }}</a></li>
                {% endfor %}
            </ul>
        {% else %}
            <p>You currently don't have any categories! Use the form below to add one!</p>
        {% endif %}
<!-- ADD CATEGORY FORM -->
        <form action='/add_category' method='post'>
            <label for='name'>Category Name:</label>
            <input id='name' name='name' type='text' required>

            <button type='submit'>Add category</button>
        </form>
<!-- DELETE **ALL** CATEGORIES BUTTON -->
        <form action='/delete_categories' method='post'>
            <button type='submit'>Delete ALL Categories</button>
        </form>
<!-- NAVIGATION -->
        {% include 'footer.html' %}

    </body>
</html>
